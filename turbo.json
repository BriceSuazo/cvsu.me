{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {},
    "db:push": {},
    "db:studio": {},
    "db:seed": {},
    "db:generate": {},
    "email:dev": {}
  },
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "CI",
    "SKIP_ENV_VALIDATION",
    "ENV",
    "STAGING_TEST_EMAILS",
    "NEXT_PUBLIC_SUPERADMIN_EMAIL",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "npm_lifecycle_event",
    "NEXT_PUBLIC_WWW_URL",
    "NEXT_PUBLIC_NGL_URL"
  ]
}
