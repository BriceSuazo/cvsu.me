{
  "name": "cvsu.me",
  "scripts": {
    "build": "turbo run build --parallel --no-daemon",
    "build:www": "turbo run build --filter=www --no-daemon",
    "dev:www": "pnpm with-env turbo run dev --filter=www --no-daemon",
    "start:www": "pnpm with-env turbo run start --filter=www --no-daemon",
    "build:admin": "turbo run build --filter=admin --no-daemon",
    "dev:admin": "pnpm with-env turbo run dev --filter=admin --no-daemon",
    "start:admin": "pnpm with-env turbo run start --filter=admin --no-daemon",
    "lint": "turbo run lint",
    "clean": "git clean -xdf node_modules dist .next",
    "clean:workspaces": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:push": "pnpm with-env turbo --filter=@cvsu.me/db db:push --no-daemon",
    "db:seed": "pnpm with-env turbo --filter=@cvsu.me/db db:seed --no-daemon",
    "db:studio": "pnpm with-env turbo --filter=@cvsu.me/db db:studio --no-daemon",
    "db:generate": "pnpm with-env turbo --filter=@cvsu.me/db db:generate --no-daemon",
    "email:dev": "pnpm with-env turbo --filter=@cvsu.me/email email:dev --no-daemon",
    "with-env": "dotenv -e .env --"
  },
  "dependencies": {
    "@cvsu.me/eslint-config": "workspace:*",
    "@cvsu.me/prettier-config": "workspace:*",
    "@cvsu.me/tsconfig": "workspace:*",
    "@turbo/gen": "^1.10.16",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "turbo": "^1.10.16"
  },
  "packageManager": "pnpm@8.7.3",
  "prettier": "@cvsu.me/prettier-config"
}
